	<parent>
		<groupId>no.unified</groupId>
		<artifactId>soak</artifactId>
		<version>1.8-SNAPSHOT</version>
	</parent>
	
    <modelVersion>4.0.0</modelVersion>
    <artifactId>soak-war</artifactId>
	<name>FriKomPort - webapp package</name>
    <packaging>war</packaging>
	
	<!-- webapp properties -->
	<properties>
		<app.name>soak</app.name>
		<jdbc.url><![CDATA[jdbc:mysql://localhost/frikom?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;characterEncoding=utf-8]]></jdbc.url>

		
		<form.auth.action>j_security_check</form.auth.action>
		<encrypt.password>true</encrypt.password>
		<encrypt.algorithm>SHA</encrypt.algorithm>
		<secure.login>false</secure.login>
		<secure.application>false</secure.application>
		<rememberMe.enabled>false</rememberMe.enabled>
		<http.port>8080</http.port>
		<https.port>8443</https.port>
		
		<request.taglib.version>1.0.1</request.taglib.version>
        <standard.taglib.version>1.0.6</standard.taglib.version>
	</properties>

    <build>
		<sourceDirectory>${project.basedir}</sourceDirectory>
		<testSourceDirectory>${project.basedir}/../../test/web</testSourceDirectory>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
			<plugin>
			  <groupId>org.codehaus.mojo</groupId>
			  <artifactId>xdoclet-maven-plugin</artifactId>
			  <version>1.0</version>
			  <dependencies>
                    <dependency>
                        <groupId>xdoclet</groupId>
                        <artifactId>xdoclet</artifactId>
                        <version>1.3-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>xdoclet</groupId>
                        <artifactId>xdoclet-hibernate-module</artifactId>
                        <version>1.3-SNAPSHOT</version>
                    </dependency>	                    
					<dependency>
                        <groupId>xdoclet</groupId>
                        <artifactId>xdoclet-xdoclet-module</artifactId>
                        <version>1.3-SNAPSHOT</version>
                    </dependency>					
					<dependency>
                        <groupId>xdoclet</groupId>
                        <artifactId>xdoclet-spring-module</artifactId>
                        <version>1.3-SNAPSHOT</version>
                    </dependency>
					<dependency>
                        <groupId>xdoclet</groupId>
                        <artifactId>xjavadoc</artifactId>
                        <version>1.5-SNAPSHOT</version>
                    </dependency>
					<dependency>
						<groupId>dom4j</groupId>
						<artifactId>dom4j</artifactId>
						<version>1.6.1</version>
					</dependency>					
			  </dependencies>
			  <executions>
				<execution>
				  <phase>generate-sources</phase>
				  <goals>
					<goal>xdoclet</goal>
				  </goals>
				  <configuration>
					<tasks>

					  <webdoclet destdir="${project.build.directory}/generated-sources/WEB-INF" mergedir="${project.basedir}/../../metadata/web"
						excludedtags="@version,@author" addedtags="@xdoclet-generated at ${TODAY}"
						force="${xdoclet.force}" verbose="true">
						<fileset dir="${project.basedir}"/>
						<fileset dir="${project.basedir}/../dao" excludes="**/jdbc/*.java;**/ez/*.java"/>
						<deploymentdescriptor validateXML="true"
							servletspec="2.3" sessiontimeout="10"
							destdir="${project.build.directory}/generated-sources/WEB-INF" distributable="false"
							displayname="${parent.artifactId}">
							<configParam name="httpPort" value="${http.port}"/>
							<configParam name="httpsPort" value="${https.port}"/>
							<configParam name="daoType" value="${dao.framework}"/>
						</deploymentdescriptor>
						<jsptaglib validateXML="true"
							description="Custom tag library for this application"
							shortName="soak" filename="soak.tld"/>
						<springvalidationxml/>
					  </webdoclet>
					  
					</tasks>
				  </configuration>
				</execution>
			  </executions>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<configuration>
					<warSourceExcludes>
						**/.svn/**
					</warSourceExcludes>
					<webResources>
						<resource>
							<filtering>false</filtering>
							<directory>${project.basedir}/../../web</directory>
							<excludes>
								<exclude>pages/**</exclude>
								<exclude>**/log4j.properties</exclude>
							</excludes>
						</resource>
						<resource>
							<filtering>false</filtering>
							<directory>${project.basedir}/../../web</directory>
							<targetPath>WEB-INF</targetPath>
							<includes>
								<include>pages/**/*.jsp</include>
							</includes>
						</resource>
						<resource>
							<filtering>true</filtering>
							<directory>target/generated-sources</directory>
						</resource>
						<resource>
							<filtering>true</filtering>
							<directory>resources/webapp</directory>
						</resource>
						<!-- Properties depending on current appserver -->
						<resource>
							<filtering>true</filtering>
							<directory>resources/conf/${context}</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
        </plugins>

		
    </build>


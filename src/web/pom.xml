	<!-- Profiles for different appservers -->
	<profiles>
		<profile>
			<id>tomcat55</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<file>
					<exists>${env.TOMCAT_HOME}/common/lib/jasper-compiler-jdt.jar</exists>
					<missing>${env.TOMCAT_HOME}/server/lib/catalina-ant.jar</missing>
				</file>
			</activation>
			<properties>
				<context>tomcat55</context>
			</properties>
		</profile>
		<profile>
		<id>tomcat5</id>
			<activation>
